{% extends 'base.html.twig' %}

{% block title %}
{% if post %}
{{ post.title }}
{% else %}
No Posts Available
{% endif %}
{% endblock %}

{% block body %}
    <h1>Post</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ post.slug }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ post.content }}</td>
            </tr>
            <tr>
                <th>PublicationDate</th>
                <td>{{ post.publicationDate ? post.publicationDate|date('d/m/Y H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('post_index', {'page': 1}) }}">back to list</a>

    <a href="{{ path('post_edit', {'slug': post.slug}) }}">edit</a>

    {{ include('admin/post/_delete_form.html.twig') }}
{% endblock %}
